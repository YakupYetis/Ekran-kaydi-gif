<Window x:Class="MyCustomApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gif-Uygulama" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Image x:Name="screenshotImage" Stretch="Uniform" />

        <Button x:Name="saveButton" Grid.Row="1" Margin="10" Width="100" Height="30" Content="Kaydet" Click="SaveButton_Click" />
    </Grid>
</Window>
